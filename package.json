{
  "name": "what-to-do",
  "version": "1.0.0",
  "description": "Backend API for WhatToDo task manager applciation",
  "main": "index.js",
  "scripts": {
    "test": "env-cmd -f ./config/test.env jest --watch --runInBand",
    "start": "node src/index.js",
    "dev-backend": "env-cmd -f ./config/dev.env nodemon src/index.js",
    "dev": "concurrently \"env-cmd -f ./config/dev.env nodemon src/index.js\" \"cd frontend && npm run dev\"",
    "heroku-postbuild": "cd frontend && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/APorporino/WhatToDo-backend.git"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "author": "Anthony Porporino",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.0.0",
    "bcrypt": "^5.0.0",
    "concurrently": "^5.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.17.1",
    "history": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.5",
    "mongoose": "^5.9.7",
    "multer": "^1.4.2",
    "sharp": "^0.25.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "nodemon": "^2.0.4"
  }
}
